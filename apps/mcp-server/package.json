{
  "name": "@mcp-b/mcp-server",
  "version": "1.0.0",
  "description": "MCP server with embedded UI support running on Cloudflare Workers",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/WebMCP-org/mcp-ui-webmcp.git",
    "directory": "apps/mcp-server"
  },
  "author": "Alex Nahas (founder of MCP-B)",
  "homepage": "https://github.com/WebMCP-org/mcp-ui-webmcp/tree/main/apps/mcp-server#readme",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc -b && vite build",
    "cf-typegen": "wrangler types",
    "deploy": "bash deploy.sh",
    "predev": "pnpm run build",
    "dev": "wrangler dev --port 8888",
    "lint": "eslint .",
    "typecheck": "tsc -b --noEmit",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@mcp-b/global": "^1.1.2",
    "@mcp-b/react-webmcp": "^0.1.5",
    "@mcp-ui/server": "^5.13.1",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "@tailwindcss/vite": "^4.1.17",
    "agents": "^0.2.20",
    "clsx": "^2.1.1",
    "hono": "^4.10.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.17",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.14.0",
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^2.1.8",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.3.0",
    "jsdom": "^26.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.12",
    "vitest": "^2.1.8",
    "wrangler": "^4.45.3"
  }
}
